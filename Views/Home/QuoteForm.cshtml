@{
    ViewData["Title"] = "Quote Form";
}

@model Quote

<h2>Quote Information:</h2>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="QuoteText">Quote:</label>
        <input asp-for="QuoteText" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Author">Author:</label>
        <input asp-for="Author" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Date">Date:</label>
        <input asp-for="Date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Subject">Subject:</label>
        <input asp-for="Subject" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Citation">Citation:</label>
        <input asp-for="Citation" class="form-control" />
    </div>

    <div>
        <input class="btn btn-primary" type="submit" value="Submit" />
    </div>

</form>