@{
    ViewData["Title"] = "Home Page";
}

@model List<Quote>

<h1>Quotes</h1>

<table class="table table-sm table-striped table-bordered">
    <thead>
        <tr>
            <th>Author</th>
            <th>Quote</th>
        </tr>
    </thead>

    <tbody>
        @foreach (Quote q in Model)
        {
            <tr>
                <td>@q.Author</td>
                <td>@q.QuoteText</td>
                <td>
                    <a class="btn btn-info btn-sml" asp-controller="Home" asp-action="QuoteDetails" asp-route-quoteid="@q.QuoteID">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-info btn-lg" asp-controller="Home" asp-action="QuoteForm">Add a Quote</a>